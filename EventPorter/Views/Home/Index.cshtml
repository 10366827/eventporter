            <label for="searchbar" hidden="hidden">Search</label>
            <input type="text" class="form-control" id="searchInput" name="searchInput" autofocus placeholder="Search for event..." onkeypress="handle(event)"/>
            <span class="input-group-btn remove_all_padding">
                <input id="search_button" class="btn btn-default" type="Submit" /><span class="glyphicon glyphicon-search"></span>
