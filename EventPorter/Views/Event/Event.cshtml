                <li data-target="#event_gallery" data-slide-to="1"></li>
                <li data-target="#event_gallery" data-slide-to="2"></li>
            </ol>

            @*
                images
            *@
            <div class="carousel-inner">
                @*
                    need to loop, adding each image in the passed model
                    <div class="item active">
                        <img src="image at index 0 in the list" alt="image name / desc / event title">
                        <div class="carousel-caption">
                            both of these could be optional, just set empty or null
                            <h3>image caption</h3>
                            <p>image text</p>
                        </div>
                    </div>
                *@
                <div class="item active">
                    <img src="~/Content/images/test_img.jpg" alt="lil P">
                    @*
                        Optional Image text
                    *@
                    @*<div class="carousel-caption">
                        <h3>Image 1 Caption</h3>
                        <p>Some text</p>
                    </div>*@
                </div>

                <div class="item">
                    <img src="~/Content/images/test_img2.jpg" alt="lil P 2">
                    @*<div class="carousel-caption">
                        <h3>Image 2 Caption</h3>
                        <p>Some text</p>
                    </div>*@
                </div>

                <div class="item">
                    <img src="~/Content/images/test_img3.jpg" alt="lil P 3">
                    @*<div class="carousel-caption">
                        <h3>Image 3 Caption</h3>
                        <p>Some text</p>
                    </div>*@
                </div>
            </div>

            @*
                Left and Right arrow yokes
            *@
            <a class="left carousel-control" href="#event_gallery" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#event_gallery" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
}
