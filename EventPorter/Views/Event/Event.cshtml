    in the first place, otherwise no gallery
    @if(galleryImages != null && !galleryImages.IsEmpty())

    START OF IMAGE CAROUSEL
*@
@if (true)
{
    <div class="container-fluid remove-padding-left-right gallery-shadow">
        <div id="event_gallery" class="carousel slide" data-ride="carousel">
            @*
                navigation circle things down the bottom
            *@
            <ol class="carousel-indicators">
                @*
                    need to loop for each of the N images
                    <li data-target="#event_gallery" data-slide-to="0" class="active"></li>
                    @for(int i = 1; i < galleryImages.Size(); i++){
                        <li data-target="#event_gallery" data-slide-to="@i"></li>
                    }
