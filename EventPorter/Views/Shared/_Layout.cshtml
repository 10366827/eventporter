                @*-------------------------------*@

                @Html.ActionLink("EVENT PORTER", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Something 1", "Index", "Home", new { area = "" })</li>
                        <li>@Html.ActionLink("Something 2", "Index", "Home", new { area = "" })</li>
                        <li>@Html.ActionLink("Something 3", "Index", "Home", new { area = "" })</li>
                    </ul>*@
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink(" Create", "Create", "Event", null, new { @class = "glyphicon glyphicon-plus-sign" })</li>
