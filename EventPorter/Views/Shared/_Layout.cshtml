<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />

    <link href="~/Content/styles/Site.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    
    <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" />

    <meta name="description" content="EventPorter brings people together through exciting experiences. Discover events that match your passions, or create your own with online ticketing tools. EventPorter is a platform that allows event organizers to plan, promote, and sell tickets to events, and lets users find events that fit their needs.">
    <meta name="keywords" content="EventPorter, Event Porter, Event, Plan, Planning, discover, party, planner, music, sport, food, ticket">

    <script src="https://cdn.auth0.com/js/auth0/8.8/auth0.min.js"></script>
    <script type="text/javascript">
        var webAuth = new auth0.WebAuth({
            domain: 'eventporter.eu.auth0.com',
            clientID: 'Q6A3rZv6dswfPNBAaib5P3fQ6PCy3869',
            redirectUri: 'http://localhost:59769/LoginCallback.ashx',
            audience: 'https://eventporter.eu.auth0.com/userinfo',
            responseType: 'code',
            scope: 'openid profile'
        });
    </script>
</head>
<body>
    <div id="site-navbar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @*PLACEHOLDER: REMOVE THIS BADASS ADAM AT SOME POINT*@
                @*<img src="~/Content/images/lil_porter.png" alt="big P" class="navbar-brand" />*@
                <img id="navbar_logo" src="~/Content/logo.png" alt="Event Porter Logo" class="navbar-brand" />
                @*-------------------------------*@

                @Html.ActionLink("EVENT PORTER", "Index", "Home", new { area = "" }, new { @id="nav_eventporter_title", @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Something 1", "Index", "Home", new { area = "" })</li>
                        <li>@Html.ActionLink("Something 2", "Index", "Home", new { area = "" })</li>
                        <li>@Html.ActionLink("Something 3", "Index", "Home", new { area = "" })</li>
                    </ul>*@
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink(" Create", "Create", "Event", null, new { @class = "glyphicon glyphicon-plus-sign" })</li>
                    @*renders the login/register/logout partial view*@ 
                    @RenderPage("RegisterLogin.cshtml")
                </ul>
            </div>
        </div> 
    </div>

    @*<div id="renderbody_wrapper" class="container-fluid body-content">*@
    <div id="renderbody_wrapper">
        @RenderBody()
        @*<div class="navbar navbar-fixed-bottom text-center">*@
    </div>

    <footer class="footer">
        <div class="container-fluid">
                <span>
                    <a href="https://www.facebook.com/" alt="link to facebook page" target="_blank">
                        <img src="~/Content/images/social/facebook_icon.png" class="footer_icon img-rounded" />
                    </a>
                </span>
                <span>
                    <a href="https://www.instagram.com/" alt="link to instagram page" target="_blank">
                        <img src="~/Content/images/social/instagram_icon.png" class="footer_icon img-rounded" />
                    </a>
                </span>
                <span>
                    <a href="https://www.linkedin.com/" alt="link to linkedin page" target="_blank">
                        <img src="~/Content/images/social/linkedin-3-xxl.png" class="footer_icon img-rounded" />
                    </a>
                </span>
                <span>
                    <a href="https://twitter.com/" alt="link to twitter page" target="_blank">
                        <img src="~/Content/images/social/twitter-3-xxl.png" class="footer_icon img-rounded" />
                    </a>
                </span>
            <br />
            <div id="footer_sitemap">
                <h4>sitemap</h4><br />
                <span>@Html.ActionLink("homepage", "Index", "Home")</span>
                <span>@Html.ActionLink("about us", "Index", "AboutUs")</span>
                <span>@Html.ActionLink("contact us", "Index", "ContactUs")</span>
                @if (Session["name"] == null)
                {
                    <span>@Html.ActionLink("register", "Index", "Account")</span>
                }
                else
                {
                    <span>@Html.ActionLink("profile", "AdamProfile", "Account")</span>
                    <span>@Html.ActionLink("create event", "Create", "Event")</span>
                }
            </div>
            <div id="footer_legal_text" class="col-xs-12">
                <row>
                    <div class="col-xs-4">
                        <span><a href="/">&copy;@DateTime.Now.Year EventPorter</a></span>
                    </div>
                    <div class="col-xs-4">
                        @Html.ActionLink("Terms and Conditions", "Index","TermsAndConditions", null, new { target="_blank" })
                    </div>
                    <div class="col-xs-4">
                       @Html.ActionLink("Privacy Policy", "Index", "PrivacyPolicy", null, new { target = "_blank" })
                    </div>
                </row>
            </div>
        </div>
    </footer>
    <script type="text/javascript"
            src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>